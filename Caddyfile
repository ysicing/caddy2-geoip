(LOG) {
    log {
        output file ./caddy.log {
            roll_size 1mb
            roll_keep 5
            roll_keep_for 1h
        }
        format console {
            time_format "iso8601"
        }
    }
}

(COMCFG) {
    encode zstd gzip
}

{
    debug
}

:2024 {
    import COMCFG
    import LOG
    metrics /metrics
    @geofilter {
        geoip {
            db_file "./Country.mmdb"
        }
    }
    @geofilter {
        respond "403 Forbidden"
    }
    file_server {
        root ./docker/example/allow
    }
}
